{
    "compilerOptions": {
	  "types": ["node"],
	  "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "target": "ES6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
	  "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "templates"
    ]
  }
